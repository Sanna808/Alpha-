@model ProjectViewModel

<div class="card project" data-project-id="@Model.Id">
    <div class="card-header">
        <div class="project-image">
            <img src="/images/default.svg" alt="project image">
        </div>
        <h6 class="project-name">@Model.ProjectName</h6>
        <span class="client-name">@Model.ClientName</span>
        <div id="account-container">
            <button type="button" data-type="dropdown" data-target="#project-dropdown-@Model.Id" class="btn-action">
                <i class="fa-solid fa-ellipsis"></i>
            </button>
            <div id="project-dropdown-@Model.Id" class="dropdown">
                <div class="dropdown-body">
                    <nav class="dropdown-actions">
                        <button data-type="modal" data-target="#edit-project-modal" class="dropdown-action btn-edit">
                            <i class="fa-duotone fa-solid fa-pen-to-square"></i>
                            <span>Edit</span>
                        </button>
                    </nav>
                    <div class="divider"></div>
                    <button type="button" data-type="delete" data-project-id="@Model.Id" class="dropdown-action delete">
                        <i class="fa-solid fa-trash"></i>
                        <span>Delete Project</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <p>@Html.Raw(Model.Description)</p>
    </div>
    <div class="card-footer">


    </div>
</div>