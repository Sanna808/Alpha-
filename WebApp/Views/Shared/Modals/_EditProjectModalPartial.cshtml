@model EditProjectViewModel

<section id="edit-project-modal" class="modal" data-madal="edit">
    <div class="card">
        <div class="card-header">
            <h3>Edit Project</h3>
            <button class="btn-close" data-modal-close="edit"></button>
        </div>
        <div class="card-body">
            <form asp-controller="" asp-action="" method="post" enctype="multipart/form-data" novalidate>
                <div class="form-group">
                    <div id="upload-trigger" class="image-preview-container project-image">
                        <img id="image-preview" src="#" class="hide">
                        <div id="image-preview-icon-container" class="circle circle-gray">
                            <i id="image-preview-icon" class="fa-duotone fa-solid fa-camera" style="--fa-primary-color: #d1d1d1; --fa-secondary-color: #ffffff; --fa-secondary-opacity: 0;"></i>
                        </div>
                    </div>
                    <input type="file" id="image-upload" accept="image/*">
                    <img id="image-preview" src="#" class="hide">
                </div>
                <div class="form-group">
                    <label class="form-label">Project Name</label>
                    <input class="form-input" type="text" placeholder="Project Name">
                </div>
                <div class="form-group">
                    <label class="form-label">Client Name</label>
                    <div class="forms-select" data-placeholder="Choose a client">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Clients)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" name="client-select-value" />
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Description</label>
                    <div class="wysiwyg">
                        <textarea id="edit-project-description"></textarea>
                        <div id="edit-project-description-wysiwyg-editor" class="wysiwyg-editor"></div>
                        <div id="edit-project-description-wysiwyg-toolbar" class="wysiwyg-toolbar">
                            <span class="ql-formats">
                                <button class="ql-bold"></button>
                                <button class="ql-italic"></button>
                                <button class="ql-underline"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-align" value=""></button>
                                <button class="ql-align" value="center"></button>
                                <button class="ql-align" value="right"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-list" value="bullet"></button>
                                <button class="ql-list" value="ordered"></button>
                            </span>
                            <span class="ql-formats">
                                <button class="ql-link"></button>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="form-horizontal-group">
                    <div class="form-group">
                        <label class="form-label">Start Date</label>
                        <input class="form-input" type="date">
                    </div>
                    <div class="form-group">
                        <label class="form-label">End Date</label>
                        <input class="form-input" type="date">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Members</label>
                    <div class="forms-select" data-placeholder="Choose a member">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Members)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" name="member-select-value" />
                    </div>
                </div>
                <div class="form-group budget">
                    <label class="form-label">Budget</label>
                    <div class="form-input-extended">
                        <i class="fa-duotone fa-solid fa-dollar-sign"></i>
                        <input class="form-input" type="text" placeholder="0">
                    </div>
                </div>
                <div class="form-group">
                    <label class="form-label">Project Status</label>
                    <div class="forms-select" data-placeholder="Choose a status">
                        <button type="button" class="form-select-trigger">
                            <span class="form-select-text"></span>
                        </button>
                        <ul class="form-select-options">
                            @foreach (var option in Model.Statuses)
                            {
                                <li class="form-select-option" data-value="@option.Value">@option.Text</li>
                            }
                        </ul>
                        <input type="hidden" name="status-select-value" value="1" />
                    </div>
                </div>
                <button type="submit" class="btn btn-blue">Save</button>
            </form>
        </div>
    </div>
</section>
